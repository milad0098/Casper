{{#contentFor "meta"}}
   <meta property="og:type" content="website"/>
   <meta property="og:url" content="{{@blog.url}}" />
   <meta property="og:title" content="{{@blog.title}}" />
   <meta property="og:site_name" content="{{@blog.title}}" />
   <meta property="og:image" content="{{@blog.url}}/{{@blog.cover}}"/>
   <meta property="og:description" content="{{@blog.description}}"/>
   <meta property="fb:app_id" content="596024160485943"/>

   <meta name="twitter:card" content="summary_large_image">
   <meta name="twitter:site" content="@verlicostyle">
   <meta name="twitter:title" content="{{@blog.title}}">
   <meta name="twitter:description" content="{{@blog.description}}">
   <meta name="twitter:creator" content="@verlicostyle">
   <meta name="twitter:image:src" content="{{@blog.url}}/{{@blog.cover}}">
{{/contentFor}}


{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
        <a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/">Subscribe</a>
        <div class="blog-social-wrap">
            <ul class="blog-socialUl clearfix">
                <li>
                    <a class="socialList ft-fb trans3s" href="http://www.facebook.com/verlico"></a>
                </li>
                <li>
                    <a class="socialList ft-tw trans3s" href="http://www.twitter.com/verlicostyle"></a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>